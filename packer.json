{
  "variables": {
    "tunnel_server": "",
    "tunnel_key_path": "",
    "apt_cacher_server": "",
    "teamcity_server": "",
    "docker_server": "",
    "composer_oauth_key": "",
    "public_key": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_account_id": "",
    "aws_cert_path": "",
    "aws_key_path": ""
  },
  "builders": [{
    "type": "amazon-instance",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-0921df7e",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "Stig (packer) {{timestamp}}",
    "account_id": "{{user `aws_account_id`}}",
    "s3_bucket": "lewis-packer-images",
    "x509_cert_path": "{{user `aws_cert_path`}}",
    "x509_key_path": "{{user `aws_key_path`}}",
    "x509_upload_path": "/tmp"
  }],
  "provisioners": [
    {
     "type": "shell",
     "inline": ["sudo yum install openssh-clients -y"]
    },
    {
      "type": "file",
      "source": "{{user `tunnel_key_path`}}",
      "destination": "/etc/ssh/id_rsa"
    },
    {
     "type": "shell",
     "script": "download.sh",
     "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
     "environment_vars": [
       "TUNNEL={{user `tunnel_server`}}",
       "APT_CACHER={{user `apt_cacher_server`}}",
       "DOCKER={{user `docker_server`}}",
       "TEAMCITY={{user `teamcity_server`}}",
       "OAUTH_KEY={{user `composer_oauth_key`}}",
       "PUBLIC_KEY={{user `public_key`}}"
      ]
  }]
}
