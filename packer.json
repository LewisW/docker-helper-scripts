{
  "variables": {
    "tunnel_server": "",
    "tunnel_key": "",
    "apt_cacher_server": "",
    "teamcity_server": "",
    "docker_server": "",
    "composer_oauth_key": "",
    "public_key": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_account_id": ""
  },
  "builders": [{
    "type": "amazon-instance",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-0921df7e",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "Stig (packer) {{timestamp}}",
    "account_id": "{{user `aws_account_id`}}",
    "s3_bucket": "lewis-packer-images",
    "x509_cert_path": "x509.cert",
    "x509_key_path": "x509.key",
    "x509_upload_path": "/tmp"
  }],
  "provisioners": [{
     "type": "shell",
     "script": "download.sh",
     "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
     "environment_variables": [
       "TUNNEL={{user `tunnel_server`}}",
       "TUNNEL_KEY={{user `tunnel_key`}}",
       "APT_CACHER={{user `apt_cacher_server`}}",
       "DOCKER={{user `docker_server`}}",
       "TEAMCITY={{user `teamcity_server`}}",
       "OAUTH_KEY={{user `composer_oauth_key`}}",
       "PUBLIC_KEY={{user `public_key`}}"
  }]
}
